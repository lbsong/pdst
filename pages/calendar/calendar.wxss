.calendar-root {
  /*font-family: simhei;*/
  font-size: 30rpx;
  background: #eee;
  display: block;
  height: 100%;
}

.splitter {
  border: 0;
  border-top: 1rpx solid #fff;
  height: 0;
}

.calendar-navbar {
  display: flex;
  justify-content: center;
  align-items: center;
  /*background: #eee;*/
  height: 85rpx;
}

.calendar-navbar-button {
  flex-grow: 1;
  width: 100rpx;
  /*height: 60rpx;*/
  text-align: center;
}

.calendar-navbar-date {
  flex-grow: 1;
  width: 150rpx;
  /*height: 50rpx;*/
  text-align: center;
}

.calendar-head {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  /*background: #eee;*/
}

.calendar-head view {
  text-align: center;
  flex: 1;
}

.calendar-body-rows {
  display: flex;
  align-items: center;
  padding: 0 4rpx 8rpx;
}

.calendar-body-cols {
  display: flex;
  flex: 1;
  align-items: center;
  padding: 0 4rpx;
}

.calendar-body-item {
  display: flex;
  /*background: #eee;*/
  width: 95rpx;
  height: 95rpx;
  align-items: center;
  justify-content: center;
}

.calendar-body-day {
  text-align: center;
}

.today {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  width:75rpx;
  height: 75rpx;
  position: relative;
  left: 0;
  top: 0;
  color: #fff;
  background-color: #17b7b2;
}

.calendar-body-dayex {
  text-align: center;
  font-size: 25rpx;
}

.calendar-detail {
  background: #000;
  width: 300rpx;
  height: 1000rpx;
}