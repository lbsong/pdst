@import "../calendar/schedule.wxss";

.wrapper {
    padding-bottom: 160rpx;
}

.show-date {
    margin: 30rpx 0;
    text-align: center;
    font-size: 60rpx;
    font-weight: lighter;
    color: #E14848
}

.common-list .item {
    overflow: hidden
}
.common-list .item:active {
    background: #333333
}
.common-list .item .inner {
    position: relative;
    border-top: 2rpx solid #333;
    margin: 0 40rpx;
    padding: 20rpx 0;
    min-height: 100rpx;
}

.common-list .header {
    border-top: 2rpx solid #333;
    margin: 0 40rpx;  
    padding: 20rpx 0;
    color: #AAA;
    font-size: 30rpx;
}

.common-list .item .icon {
    position: absolute;
    left: 0;
    top: 20rpx;
    width: 100rpx;
    height: 100rpx;
}
.common-list .item .inner.with-check .checker {
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    left: 0;
    top: 10rpx;
    bottom: 10rpx;
    width: 80rpx;
    border-right: 2rpx solid #333;
}
.common-list .item .inner.with-check .icon {
    left: 100rpx;
}
.common-list .item .content {
    margin-left: 130rpx;
}
.common-list .item .inner.with-check .content{
    margin-left: 230rpx;
}
.common-list .item .title {
    display: block;
    overflow: hidden;
    white-space:nowrap;
    text-overflow: ellipsis;
    font-weight: lighter;
    font-size: 32rpx;
    margin-top: 30rpx;
}


.mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, .5);
    z-index: 1100;
}

.modal {
    position: fixed;
    top: 50%;
    left: 50%;
    width: 600rpx;
    min-height: 200rpx;
    margin-left: -300rpx;
    margin-top: -200rpx;
    background-color: #FFF;
    border-radius: 10rpx;
    z-index: 1200;
    color: #555;
}
.modal .content {
    overflow: hidden;
    padding: 40rpx;
    font-size: 38rpx;
    margin-bottom: 100rpx;
}
.modal .content .input {
    padding: 20rpx;
    font-size: 38rpx;
    border: 2prx solid #E14848
}
.modal .footer {
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 100rpx;
    border-radius: 0 0 10rpx 10rpx;
    overflow: hidden;
}
.modal .footer .btn {
    height: 100rpx;
    width: 100%;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    background-color: #EEE;
    color: #555;
}
.modal .footer .btn:active {
    background-color: #DDD;
}

.modal .level {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    padding: 20rpx;
}
.modal .level icon {
    margin-left: 20rpx;
}